<div class="container d-flex align-items-center justify-content-between mb-4">
  <h1>Latest Articles</h1>
  <%= link_to "+ Add a new article", new_article_path, class: "btn btn-primary" %>
</div>

<ul class="list-group">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article_path(article), class: "d-flex list-group-item list-group-item-action justify-content-between align-items-center" do %>
        <p class="col-10"><%= article.title %></p>
        <span class="badge badge-primary badge-pill"><%= rand(1..50) %></span>
      <% end %>
    </li>
  <% end %>
</ul>
